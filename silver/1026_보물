//https://www.acmicpc.net/problem/1026

#include<stdio.h>
#include<vector>
#include<algorithm>
#include<functional>
using namespace std;
int N;
vector<int> A;
vector<int> B;
int main(){
    scanf("%d",&N);
    for(int i=0;i<N;i++){
        int n;
        scanf("%d",&n);
        A.push_back(n);
    }
    for(int i=0;i<N;i++){
        int n;
        scanf("%d",&n);
        B.push_back(n);
    }
    sort(A.begin(),A.end());
    sort(B.begin(),B.end(),greater<int>());
    int sum = 0;
    for(int i=0;i<N;i++){
        sum+= A[i]*B[i];
    }
    printf("%d",sum);
    return 0;
}
